# VARIABLES-------------------------------------------------#
#=DISTRIBUTION and SETUP Dependent Variables================#
set $xsl_c xfce4-session-logout --fast
#===========================================================#
set $w_k Mod4
set $a_k Mod1
set $s_k Shift
set $c_k Control
set $f_e floating enable
set $m_s move scratchpad
set $exe exec --no-startup-id
set $e_a exec_always --no-startup-id
set $mcw move container to workspace
#-----------------------------------------------------------#
# NOTE: To INCREASE volume up to 150%, use the following:   #
# 	    wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 1%+    #
#-----------------------------------------------------------#
set $tm wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
set $dv wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
set $iv wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 5%+
set $s_s $HOME/Pictures/screenshots/s_shot.jpg &&\
				 thunar $HOME/Pictures/screenshots/
set $w_s $HOME/Pictures/screenshots/w_shot.jpg &&\
				 thunar $HOME/Pictures/screenshots/

#-----------------------------------------------------------#
# Font for window titles. Will also be used by the bar      #
# unless a different font is used in the bar {} block below.#
#-----------------------------------------------------------#
font pango:SFNS Display 16

#-----------------------------------------------------------#
# Use Mouse+$w_k to DRAG FLOATING WINDOWS to their wanted   #
# position.                                                 #
#-----------------------------------------------------------#
floating_modifier $w_k
# MINIMUM size of FLOATING WINDOWS--------------------------#
floating_minimum_size 432 x 243
#floating_minimum_size -1 x -1
# MAXIMUM size of FLOATING WINDOWS--------------------------#
floating_maximum_size 1888 x 984
# KILL FOCUSED Windows--------------------------------------#
bindsym $a_k+F4 kill
# CHANGE TILED window FOCUS---------------------------------#
bindsym $w_k+Left focus left
bindsym $w_k+Down focus down
bindsym $w_k+Up focus up
bindsym $w_k+Right focus right
# MOVE FOCUSED window---------------------------------------#
bindsym $w_k+$s_k+Left move left
bindsym $w_k+$s_k+Down move down
bindsym $w_k+$s_k+Up move up
bindsym $w_k+$s_k+Right move right
# SPLIT ORIENTATION: Vertical (Left/Right)------------------#
bindsym $w_k+v split v
# SPLIT ORIENTATION: Horizontal (Down/Up)-------------------#
bindsym $w_k+h split h
# CONTAINER LAYOUT: Stacking Layout-------------------------#
bindsym $w_k+s layout stacking
# CONTAINER LAYOUT: Tabbed Layout---------------------------#
bindsym $w_k+w layout tabbed
# CONTAINER LAYOUT: TOGGLE Split Layout---------------------#
bindsym $w_k+e layout toggle split
# Toggle FULLSCREEN mode for the FOCUSED window-------------#
bindsym $w_k+f fullscreen toggle
# Change FOCUS between TILED and FLOATING windows-----------#
bindsym $w_k+space focus mode_toggle
# TILING/FLOATING windows toggle----------------------------#
bindsym $w_k+$s_k+space floating toggle
# FOCUS the parent container--------------------------------#
bindsym $w_k+a focus parent
# FOCUS the child container---------------------------------#
bindsym $w_k+d focus child
# SWITCH to WHICH workspace---------------------------------#
bindsym $w_k+1 workspace 1
bindsym $w_k+2 workspace 2
bindsym $w_k+3 workspace 3
bindsym $w_k+4 workspace 4
bindsym $w_k+5 workspace 5
bindsym $w_k+6 workspace 6
bindsym $w_k+7 workspace 7
bindsym $w_k+8 workspace 8
bindsym $w_k+9 workspace 9
bindsym $w_k+0 workspace 10

# MOVE focused container to WHICH workspace-----------------#
# and GO TO that workspace----------------------------------#
bindsym $w_k+$s_k+1 $mcw 1; workspace 1
bindsym $w_k+$s_k+2 $mcw 2; workspace 2
bindsym $w_k+$s_k+3 $mcw 3; workspace 3
bindsym $w_k+$s_k+4 $mcw 4; workspace 4
bindsym $w_k+$s_k+5 $mcw 5; workspace 5
bindsym $w_k+$s_k+6 $mcw 6; workspace 6
bindsym $w_k+$s_k+7 $mcw 7; workspace 7
bindsym $w_k+$s_k+8 $mcw 8; workspace 8
bindsym $w_k+$s_k+9 $mcw 9; workspace 9
bindsym $w_k+$s_k+0 $mcw 10; workspace 10
# MOUSE focus-----------------------------------------------#
focus_follows_mouse no

# Screenshot via SCROT (Non-Interactive)--------------------#
# CAPTURE Entire Desktop -----------------------------------#
bindsym Print $exe scrot -p $s_s
# CAPTURE Focused Window -----------------------------------#
bindsym $c_k+Print $exe scrot -ubp $w_s

