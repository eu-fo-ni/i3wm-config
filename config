# RELOAD this configuration file----------------------------#
bindsym $w_k+$s_k+c reload
# RESTART i3wm inplace (preserves your session)-------------#
bindsym $w_k+$s_k+r restart
# RESIZE Window---------------------------------------------#
# NOTE: The same result is achieved HOLDING                 #
#       Mod1($w_k)+MOUSE Dragging using RIGHT Button        #
#-----------------------------------------------------------#
mode "Resize Window"
{
  # These bindings trigger as soon as you enter the
  # resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
	bindsym Left resize shrink width 4 px or 4 ppt
	bindsym Down resize grow height 4 px or 4 ppt
	bindsym Up resize shrink height 4 px or 4 ppt
	bindsym Right resize grow width 4 px or 4 ppt

  # back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $w_k+r mode "Resize Window"

# SCRATCHPAD KeyBindings------------------------------------#
bindsym $w_k+j $m_s
bindsym $w_k+k scratchpad show

#-----------------------------------------------------------#
# START i3bar to display a workspace bar (plus the system   #
# information i3status finds out, if available)             #
#-----------------------------------------------------------#
bar
{
	# BAR Options---------------------------------------------#
	status_command i3status
	tray_output none
	workspace_min_width 32
	height 32
	i3bar_command i3bar --transparency
#	mode hide
#	hidden_state hide
#	position top
#	workspace_buttons no
#	strip_workspace_numbers yes
	# BAR Colors----------------------------------------------#
	colors
	{
		background #2d313c80
		separator #e54e17
		statusline #ffffff
	# BAR Elements-------BORDER----BGROUND---LABEL------------#
    #-------------------------------------------------------#
		focused_workspace  #28557799 #28557799 #ffffff
		active_workspace   #5f676a99 #5f676a99 #ffffff
		inactive_workspace #22222299 #22222299 #ffffff
		urgent_workspace   #90000099 #90000099 #ffffff
		binding_mode       #90000099 #90000099 #ffffff
    #-------------------------------------------------------#
	}
	# STATUS Bar Snipping Tool (Requires imagemagick)---------#
	bindsym --release button3 $exe\
		import $HOME/Pictures/screenshots/snippet.jpg\
		&& thunar $HOME/Pictures/screenshots/
#	bindsym button3 exec --no-startup-id jgmenu_run
	# SOUND Mute Toggle---------------------------------------#
	bindsym --release button2 $exe $tm
}
